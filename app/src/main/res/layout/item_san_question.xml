<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/card_background">

    <TextView
        android:id="@+id/positive_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Положительный"
        android:textColor="@color/positive_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/negative_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Отрицательный"
        android:textColor="@color/negative_color"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45" />

    <LinearLayout
        android:id="@+id/answer_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/positive_label">

        <Button
            android:id="@+id/score_minus_3"
            style="@style/SanAnswerButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="3"
            android:textColor="@color/san_answer_text_color" />

        <Button
            android:id="@+id/score_minus_2"
            style="@style/SanAnswerButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="2"
            android:textColor="@color/san_answer_text_color" />

        <Button
            android:id="@+id/score_minus_1"
            style="@style/SanAnswerButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="1"
            android:textColor="@color/san_answer_text_color" />

        <Button
            android:id="@+id/score_0"
            style="@style/SanAnswerButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="0"
            android:textColor="@color/san_answer_text_color" />

        <Button
            android:id="@+id/score_plus_1"
            style="@style/SanAnswerButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="1"
            android:textColor="@color/san_answer_text_color" />

        <Button
            android:id="@+id/score_plus_2"
            style="@style/SanAnswerButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="2"
            android:textColor="@color/san_answer_text_color" />

        <Button
            android:id="@+id/score_plus_3"
            style="@style/SanAnswerButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="3"
            android:textColor="@color/san_answer_text_color" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>