<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:elevation="2dp"
    android:radius="8dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/positiveText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Позитивный полюс"
                android:textSize="14sp"
                android:textColor="@color/positive_color" />

            <TextView
                android:id="@+id/negativeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Негативный полюс"
                android:textSize="14sp"
                android:textColor="@color/negative_color"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn3Positive"
                style="@style/AppButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:textSize="12sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/text_color"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn2Positive"
                style="@style/AppButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="2"
                android:textSize="12sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/text_color"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn1Positive"
                style="@style/AppButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:textSize="12sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/text_color"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn0"
                style="@style/AppButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:textSize="12sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/text_color"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn1Negative"
                style="@style/AppButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:textSize="12sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/text_color"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn2Negative"
                style="@style/AppButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="2"
                android:textSize="12sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/text_color"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn3Negative"
                style="@style/AppButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:textSize="12sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/text_color"
                android:layout_margin="2dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>