<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meditation_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeditationFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/player_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/meditation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp" />

    </ScrollView>

    <!-- Медиаплеер (с улучшенным дизайном) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/player_background"
        android:elevation="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Верхняя часть с заголовком и иконкой воспроизведения -->
        <LinearLayout
            android:id="@+id/player_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">
            
            <ImageButton
                android:id="@+id/play_pause_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_button_background"
                android:contentDescription="Воспроизвести/Пауза"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play_circle"
                android:tint="@color/white"
                android:padding="8dp" />

            <TextView
                android:id="@+id/current_track_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Название медитации"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Временная шкала -->
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:progressTint="@color/meditation_accent"
            android:thumbTint="@color/meditation_accent"
            android:progressBackgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/player_header" />

        <!-- Время воспроизведения -->
        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/seek_bar"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/time_elapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.8" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.8" />
        </LinearLayout>

        <!-- Разделитель -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/time_layout" />

        <!-- Регулировка баланса музыки и голоса -->
        <LinearLayout
            android:id="@+id/balance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <TextView
                android:id="@+id/balance_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Баланс голос / музыка"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.9"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mic"
                    android:tint="@color/white"
                    android:alpha="0.8" />

                <SeekBar
                    android:id="@+id/balance_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="@color/meditation_accent"
                    android:thumbTint="@color/meditation_accent"
                    android:progressBackgroundTint="@color/white" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_music_note"
                    android:tint="@color/white"
                    android:alpha="0.8" />
            </LinearLayout>
        </LinearLayout>

        <!-- Регулировка громкости -->
        <LinearLayout
            android:id="@+id/volume_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/balance_layout">

            <TextView
                android:id="@+id/volume_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Громкость"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.9"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/volume_low_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_volume_down"
                    android:tint="@color/white"
                    android:alpha="0.8" />

                <SeekBar
                    android:id="@+id/volume_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="80"
                    android:progressTint="@color/meditation_accent"
                    android:thumbTint="@color/meditation_accent"
                    android:progressBackgroundTint="@color/white" />

                <ImageView
                    android:id="@+id/volume_high_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_volume_up"
                    android:tint="@color/white"
                    android:alpha="0.8" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 