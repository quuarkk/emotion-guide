<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/san_answer_selected_positive" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_selected="true" android:state_activated="true">
        <shape>
            <solid android:color="@color/san_answer_selected_negative" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_selected="true" android:state_activated="false" android:state_checkable="true">
        <shape>
            <solid android:color="@color/san_answer_unselected" /> <!-- Для кнопки "0" -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>