<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#7F9CF5</item>
        <item name="colorSecondary">#C3D7FF</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorPrimaryVariant">#7F9CF5</item>
        <item name="android:statusBarColor">#7F9CF5</item>
    </style>
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_color</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">24dp</item>
    </style>
    <style name="SanAnswerButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
    <style name="AppDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:windowElevation">4dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>