<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Emo" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.Emo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#A3BFFA</item>
        <item name="colorPrimaryVariant">#7F9CF5</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">#A3BFFA</item> <!-- Исправляем на #A3BFFA -->
    </style>

    <style name="Theme.Emo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">#A3BFFA</item>
        <item name="colorPrimaryVariant">#7F9CF5</item>
        <item name="android:statusBarColor">#A3BFFA</item> <!-- Исправляем на #A3BFFA -->
    </style>

    <style name="Theme.Emo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#A3BFFA</item>
        <item name="android:background">#A3BFFA</item> <!-- Оставляем #A3BFFA, уже совпадает -->
    </style>
    <style name="Theme.Emo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>