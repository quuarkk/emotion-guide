<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Emo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Emo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4A90E2</item> <!-- Более светлый, нежный оттенок синего -->
        <item name="colorPrimaryVariant">#4A90E2</item> <!-- Тот же оттенок для статус-бара -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#4A90E2</item> <!-- Явно указываем цвет -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Emo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!-- Добавляем те же цвета для NoActionBar темы -->
        <item name="colorPrimary">#4A90E2</item>
        <item name="colorPrimaryVariant">#4A90E2</item>
        <item name="android:statusBarColor">#4A90E2</item>
    </style>

    <!-- Стили для AppBar -->
    <style name="Theme.Emo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Также определяем цвет для AppBar -->
        <item name="colorPrimary">#4A90E2</item>
        <item name="android:background">#4A90E2</item>
    </style>
    <style name="Theme.Emo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>