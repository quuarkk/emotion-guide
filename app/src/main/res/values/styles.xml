<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовая тема приложения -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#4A90E2</item>
        <item name="colorSecondary">#4A90E2</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorPrimaryVariant">#4A90E2</item>
        <item name="android:statusBarColor">#4A90E2</item>
    </style>
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item> <!-- Уменьшаем размер шрифта -->
    </style>
</resources>